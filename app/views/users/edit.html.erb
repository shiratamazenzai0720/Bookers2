<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id: "inputName" %>
    <label for="inputImage">ProfileImage</label>
    <%= f.file_field :profile_image, accept: "image/*" %>
    <label for="inputNIntroduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id: "inputIntroduction" %>
    <%= f.submit "変更を保存" %>
<% end %>