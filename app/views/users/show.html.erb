<div>
  <%= flash[:notice] %>
</div>

<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<%= render 'info', user: @user %>
<%= render 'books/new', book: @book %>
<%= render 'books/index', books: @books %>